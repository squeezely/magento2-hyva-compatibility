<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceBlock name="squeezely.pixelManager" remove="true" />

        <referenceBlock name="head.additional">
            <block name="squeezely.hyva.pixelManager"
                   class="Magento\Framework\View\Element\Template"
                   template="Squeezely_HyvaPlugin::default.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Squeezely\Plugin\ViewModel\PixelManager</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
